	<bean id="sqlSessionFactory" class="com.smgroup.web.common.RefreshableSqlSessionFactoryBean">
		 <property name="dataSource" ref="dataSource" />
		 <property name="mapperLocations" value="classpath*:/mapper/**/*_MYSQL.xml" />
	 </bean>
	<bean id="sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg index="0" ref="sqlSessionFactory" />
	</bean>
	
